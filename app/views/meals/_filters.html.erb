<div class="col-lg-3" id="filters">
  <div class="well sidebar-nav">
    <h3>Filters</h3>
    <ul class="nav nav-list">
		<h4>Time</h4>
		<li>
			<h5>From</h5>
		    <%= text_field_tag :time_from, nil, class: 'form-control time-picker filters', id: 'filter-time-from' %>
		    <h5>To</h5>
		    <%= text_field_tag :time_to, nil, class: 'form-control time-picker filters', id: 'filter-time-to' %>
		</li>
		<br>
		<h4>Date</h4>
		<li>
			<h5>From</h5>
			<%= text_field_tag :date_from, nil, class: 'form-control date-picker filters', id: 'filter-date-from', data: { 'date-format' => 'DD/MM/YYYY'} %>
			<h5>To</h5>
			<%= text_field_tag :date_to, nil, class: 'form-control date-picker filters', id: 'filter-date-to', data: { 'date-format' => 'DD/MM/YYYY'} %>
		</li>
	</ul>
	<%= button_tag 'Filter', class: 'btn btn-primary filter-button' %>
	</div>
</div>
