<div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Sign in</h4>
      </div>
      <%= form_tag sessions_path, remote: true, html: { class: 'form-vertical' } do %>
        <div class="modal-body">
  			<div class="form-group">
              <%= email_field_tag :email, params[:email], placeholder: 'Email', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= password_field_tag :password, params[:email], placeholder: 'Password', class: 'form-control' %>
            </div>
        </div>
        <div class="modal-footer">
        	  <%= button_tag 'Close', class: 'btn btn-default', data: { dismiss: 'modal' } %>
            <%= button_tag 'Sign in', class: 'btn btn-primary' %>
        </div>
      <% end %>

    </div>
</div>